@model ICollection<UserData>

<div class="mb-5 text-center row">
    <div class="col-1">
        <a class="btn btn-small btn-dark" asp-controller="Home" asp-action="HomeIndex">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
            </svg>
        </a>
    </div>
    <div class="col-10">
        <h2>Aktualna lista zamówień</h2>
    </div>
</div>

@if (Model.Count() == 0)
{
    <div class="text-center fs-5">
        <p>Brak aktualnych zamówień!</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Identyfikator zamówienia</th>
                    <th scope="col">Data zamówienia</th>
                    <th scope="col">Status zamówienia</th>
                    <th scope="col">Edytuj zamówienie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var element in Model)
                {
                    <tr>
                        <th class="text-uppercase" scope="row">@element.Id</th>
                        <td>@element.DateOrder.ToString("dddd, dd MMMM yyyy HH:mm")</td>
                        <td>
                            @for (var i = 0; i < element.StatusName.Count(); i++)
                            {
                                @element.StatusName[i]
                            }
                        </td>
                        <td>
                            <a class="btn btn-secondary" type="submit" asp-route-id="@element.Id" asp-action="StatusEdit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}






