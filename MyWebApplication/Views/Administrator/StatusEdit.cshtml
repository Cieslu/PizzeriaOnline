@model UserData

<div class="mb-5 text-center row">
    <div class="col-1">
        <a class="btn btn-small btn-dark" asp-controller="Administrator" asp-action="AdministratorCurrentIndex">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
            </svg>
        </a>
    </div>
    <div class="col-10">
        <h2>Edytuj status zamówienia</h2>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th scope="col">Identyfikator zamówienia</th>
                <th scope="col">Data zamówienia</th>
                <th scope="col">Szczegóły zamóweinia</th>
                <th scope="col">Status zamówienia</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th class="text-uppercase" scope="row">@Model.Id</th>             
                <td>@Model.DateOrder.ToString("dddd, dd MMMM yyyy HH:mm")</td>
                <td><a class="" asp-controller="Administrator" asp-action="AdministratorCurrentDetails" asp-route-id="@Model.Id">Pokaż</a></td>
                <form method="post" >
                <td>
                    <div class="row">
                        <div class="col-9">
                            <select class="form-select" asp-for="StatusId" asp-items="@ViewBag.Status"></select>
                        </div>
                        <div class="col-1">
                            <button class="btn btn-success" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </td>
                </form>
            </tr>
        </tbody>
    </table>
</div>




