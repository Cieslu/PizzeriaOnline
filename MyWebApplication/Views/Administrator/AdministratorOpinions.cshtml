@model ICollection<Opinion>

<section>
    <div class="mb-5 text-center row">
        <div class="col-1">
            <a class="btn btn-small btn-dark" asp-controller="Home" asp-action="HomeIndex">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                    <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                </svg>
            </a>
        </div>
        <div class="col-10">
            <h2>Opinie klientów</h2>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="row col-12 bg-light p-5 border border-1">
            <div class="row border-bottom pb-3">
                <div class="col-12">
                    <div class="h4">Opinie (@Model.Count):</div>
                </div>
            </div>

            @if (Model.Count == 0)
            {
                <div class="bg-light mt-5 text-center">
                    <h5>Nie dodano jeszcze żadnych opinii!</h5>
                </div>
            }

            <div class="mt-3">
                <ul class="list-unstyled">
                    @foreach (var element in Model)
                    {
                        <li class="p-3 border-bottom row">
                            <div class="row">
                                <div class="col-10 fw-bold">@element.Name:</div>
                                <div class="col-2 text-end">
                                    <div class="d-inline-block">
                                        @element.Date.ToShortDateString()
                                    </div>
                                    <div class="d-inline-block ms-2">
                                        <a class="btn text-danger p-0 m-0" asp-controller="Administrator" asp-action="AdministratorOpinionsDelete" asp-route-id="@element.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </a>

                                    </div>
                                </div>
                            </div>
                            <div class="col-10 ms-3"><p>@element.Description</p></div>
                        </li>

                    }
                </ul>
            </div>
        </div>
    </div>
</section>