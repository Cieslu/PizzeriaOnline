@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mt-3 mt-xl-0">
            <a class="nav-link fw-bold text-dark font-size" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Cześć: @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("HomeIndex", "Home", new { area = "" })">
                <button type="submit" class="nav-link fw-bold btn btn-link text-dark font-size">Wyloguj się</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mt-3 mt-xl-0">
            <a class="nav-link fw-bold text-dark link-hover font-size" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
        </li>
        <li class="nav-item">
            <a class="nav-link fw-bold text-dark link-hover font-size" asp-area="Identity" asp-page="/Account/Login">Zaloguj się</a>
        </li>
    }
</ul>
